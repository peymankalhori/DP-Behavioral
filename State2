def main():
    # دریافت جمله از کاربر
    sentence = input("لطفاً یک جمله وارد کنید: ")

    # دریافت انتخاب کاربر
    print("\nچگونه می‌خواهید جمله چاپ شود؟")
    print("1. به ترتیب معمولی")
    print("2. به ترتیب معکوس")
    
    choice = input("لطفاً 1 یا 2 را انتخاب کنید: ")

    # بررسی انتخاب کاربر و نمایش نتیجه
    if choice == '1':
        print("\nجمله به ترتیب معمولی:")
        print(sentence)
    elif choice == '2':
        print("\nجمله به ترتیب معکوس:")
        print(sentence[::-1])  # معکوس کردن رشته با slicing
    else:
        print("\nورودی نامعتبر است. لطفاً 1 یا 2 را انتخاب کنید.")

# اجرای برنامه
if __name__ == "__main__":
    main()
